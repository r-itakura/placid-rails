<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Hotel</th>
      <th>Plan</th>
      <th>Room no</th>
      <th>Smoke flag</th>
      <th>Bed type</th>
      <th>Usable flag</th>
      <th>Maximum capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.hotel_id %></td>
        <td><%= room.plan_id %></td>
        <td><%= room.room_no %></td>
        <td><%= room.smoke_flag %></td>
        <td><%= room.bed_type %></td>
        <td><%= room.usable_flag %></td>
        <td><%= room.maximum_capacity %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

