<p id="notice"><%= notice %></p>

<h1>Guests</h1>

<table>
  <thead>
    <tr>
      <th>Sei</th>
      <th>Mei</th>
      <th>Sei kana</th>
      <th>Mei kana</th>
      <th>Email</th>
      <th>Tel</th>
      <th>Sex</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.sei %></td>
        <td><%= guest.mei %></td>
        <td><%= guest.sei_kana %></td>
        <td><%= guest.mei_kana %></td>
        <td><%= guest.email %></td>
        <td><%= guest.tel %></td>
        <td><%= guest.sex %></td>
        <td><%= link_to 'Show', guest %></td>
        <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
        <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

